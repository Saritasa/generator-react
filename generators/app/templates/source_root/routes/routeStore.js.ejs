import { Runtime } from 'react-app-core';

import { ExampleHeader } from '../components/ExampleHeader';
import { ExampleRootPage } from '../pages/ExampleRootPage';
import { ExampleNestedPage } from '../pages/ExampleNestedPage';

/**
 * RouteStore for application.
 *
 * Every route of application (except features' routes) should be described in this section.
 * Currently available routes:
 * - `/` - Application's root
 * - `/nested`
 *
 * @type {ReactAppCore.RouteStore} See react-app-core to learn more about it.
 * @memberof Routing/routes
 */
const { routeStore } = Runtime.getInstance();

routeStore
  .setName('')
  .inject(
    [
      {
        path: '',
        component: ExampleHeader,
      },
      {
        path: '',
        exact: true,
        component: ExampleRootPage,
      },
      {
        path: 'nested',
        exact: true,
        component: ExampleNestedPage,
      },
    ],
  );

export { routeStore }
